{
  "name": "AntiPhish",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Rate Emails by their Potential for Spam or Phishing Attempts",
  "homepage_url": "https://github.com/pranmar123/AntiPhish",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "200": "icons/brand-icon.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "page_action": {
    "default_icon": "icons/brand-icon.png",
    "default_title": "AntiPhish",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "contextMenus",
    "tabs",
    "http://mail.google.com/mail"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}
